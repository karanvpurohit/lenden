<div class="container">
	<div class="top-buffer"></div>
	<div class="row">
		<div class="col-xs-4">
			<%= form_for @item, url: posts_path do |f| %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name , :class => 'form-control'%>
				</div>
				<div class="form-group">
					<%= f.label :description %>
					<%= f.text_area :description , :class => 'form-control'%>
				</div>
				<div class="form-group">
					<%= f.submit 'Submit',  :class => "btn btn-default" %>
				</div>
			<% end %>
		</div>
	</div>
</div>